generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  uid         String   @id
  email       String?
  displayName String?
  photoURL    String?
  createdAt   DateTime @default(now())
}

model Leaderboard {
  id         Int    @id @default(autoincrement())
  firebaseId String @unique
  name       String
  points     Int
  rank       Int? // ðŸ‘ˆ add this line (nullable if not always present)
}
